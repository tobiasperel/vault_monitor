{
  "name": "vault_monitor",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "reset": "rm -rf db && yarn cache clean && ./retry-sync.sh",
    "dev": "ponder dev",
    "start": "ponder start",
    "db": "ponder db",
    "codegen": "ponder codegen",
    "lint": "eslint .",
    "typecheck": "tsc",
    "prices": "tsx src/scripts/hypeVaultMonitor.ts",
    "risk": "tsx src/scripts/riskAggregator.ts",
    "setup-supabase": "tsx src/scripts/setupSupabase.ts",
    "jobs": "tsx src/scripts/setupJobs.ts",
    "chunk-index": "tsx src/scripts/chunkIndexer.ts",
    "sync-latest": "TARGET_BLOCK=20030000 tsx src/scripts/chunkIndexer.ts",
    "test-rpc": "tsx src/scripts/testRpc.ts",
    "monitor": "tsx src/scripts/monitor.ts",
    "dashboard": "node src/dashboard/index.js",
    "hype-monitor": "tsx src/scripts/hypeVaultMonitor.ts",
    "hype-jobs": "tsx src/scripts/hypeMonitoringJobs.ts",
    "hype-api": "tsx src/api/hypeVaultAPI.ts",
    "dev-hype": "concurrently \"npm run hype-api\" \"npm run hype-jobs\"",
    "setup-hype": "node -e \"console.log('\\n=== HYPE Vault Database Schema ===\\n'); console.log(require('fs').readFileSync('./sql/hype_vault_schema.sql', 'utf8')); console.log('\\n=== Copy the above SQL and execute it in your Supabase SQL editor ===\\n');\"",
    "verify-config": "tsx src/scripts/verifyConfig.ts",
    "find-addresses": "tsx src/scripts/findAddresses.ts",
    "verify-hype-token": "tsx src/scripts/verifyHypeToken.ts",
    "search-real-hype": "tsx src/scripts/searchRealHype.ts",
    "real-time": "tsx scripts/realTimeMonitor.ts",
    "monitor-live": "tsx scripts/realTimeMonitor.ts",
    "no-mocks": "tsx scripts/realTimeMonitor.ts",
    "demo-real": "tsx scripts/realPricesOnly.ts",
    "core-metrics": "tsx src/scripts/hypeVaultMonitor.ts",
    "validate-supabase": "tsx scripts/validateAndRunCoreMetrics.ts",
    "consigna": "tsx scripts/validateAndRunCoreMetrics.ts",
    "core-metrics-fast": "tsx scripts/coreMetricsWithFallbacks.ts",
    "prices-only": "tsx scripts/realPricesOnly.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "axios": "^1.8.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "hono": "^4.5.0",
    "node-fetch": "2",
    "ponder": "0.10.3",
    "tsx": "^4.19.3",
    "viem": "^2.33.3"
  },
  "devDependencies": {
    "@types/cron": "^2.4.3",
    "@types/node": "^20.9.0",
    "@types/node-fetch": "^2.6.12",
    "eslint": "^8.53.0",
    "eslint-config-ponder": "^0.10.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.14"
  }
}
